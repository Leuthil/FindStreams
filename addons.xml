<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="context.findstreams.contextmenu" name="FindStreams - Contextmenu" version="0.2.7" provider-name="Leuthil">
  <requires>
    <import addon="xbmc.python" version="2.20.0"/>
  </requires>
    <extension point="kodi.context.item" library="addon.py">
      <item>
        <label>Find Streams</label>
        <visible>StringCompare(ListItem.dbtype,movie) | StringCompare(ListItem.dbtype,tvshow) | StringCompare(ListItem.dbtype,season) | StringCompare(ListItem.dbtype,episode)</visible>
      </item>
    </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">FindStreams contextmenu button to video library</summary>
    <description lang="en">Add FindStreams contextmenu button to context menu in video library. This contextmenu provides a "Find Streams" utility to search if the selected video is legally available from different providers in your country.</description>
    <platform>all</platform>
    <forum></forum>
    <source>https://github.com/Leuthil/LeuthilKodiRepo/</source>
  </extension>
</addon>

<addon id="script.leuthil.netflixchecker" name="Netflix Checker" version="0.0.4" provider-name="Leuthil">
    <requires>
		<import addon="xbmc.python" version="2.14.0"/>
	</requires>
	<extension point="xbmc.python.script" library="addon.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">Netflix Checker</summary>
		<description lang="en">Netflix checker</description>
		<license>GNU General Public License, v2</license>
		<language></language>
		<forum></forum>
		<source>https://github.com/Leuthil/LeuthilKodiRepo/script.leuthil.netflixchecker</source>
	</extension>
</addon>

<addon id="xbmc.repo.leuthil" name="Leuthil repo" version="0.0.1" provider-name="leuthil">
	<extension point="xbmc.addon.repository" name="leuthil Addon Repository">
        <info compressed="false">https://raw.githubusercontent.com/Leuthil/LeuthilKodiRepo/master/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/Leuthil/LeuthilKodiRepo/master/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/Leuthil/LeuthilKodiRepo/master/releases/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Leuthil Addons</summary>
		<description>Download and install addons from leuthil</description>
		<platform>all</platform>
        <nofanart>true</nofanart>
	</extension>
</addon>
</addons>
