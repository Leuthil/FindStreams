<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="script.leuthil.netflixchecker" name="Netflix Checker" version="0.0.1" provider-name="leuthil">
    <requires>
		<import addon="xbmc.python" version="2.14.0"/>
	</requires>
	<extension point="xbmc.python.script" library="addon.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">Netflix Checker</summary>
		<description lang="en">Netflix checker</description>
		<license>GNU General Public License, v2</license>
		<language></language>
		<forum></forum>
		<source>https://github.com/Leuthil/LeuthilKodiRepo/script.leuthil.netflixchecker</source>
		<email>leuthil@gmail.com</email>
	</extension>
</addon>

<addon
  id="xbmc.repo.leuthil"
  name="Leuthils Add-ons for Kodi"
  version="0.0.1"
  provider-name="leuthil">
  <requires>
    <import addon="xbmc.addon" version="12.0.0"/>
  </requires>
  <extension point="xbmc.addon.repository"
             name="Leuthil Add-on Repository">
    <info compressed="true">https://raw.githubusercontent.com/Leuthil/LeuthilKodiRepo/master/addons.xml</info>
    <checksum>https://raw.githubusercontent.com/Leuthil/LeuthilKodiRepo/master/addons.xml.md5</checksum>
    <datadir zip="true">https://raw.githubusercontent.com/Leuthil/LeuthilKodiRepo/master/releases</datadir>
    <hashes>true</hashes>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Leuthil addons for Kodi</summary>
    <description lang="en">Install addons from Leuthil</description>
    <disclaimer lang="en"></disclaimer>
    <platform>all</platform>
    <nofanart>true</nofanart>
  </extension>
</addon>
</addons>
