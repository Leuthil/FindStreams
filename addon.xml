<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="context.findstreams.contextmenu" name="FindStreams - Find Legal Streams" version="0.3.9" provider-name="Leuthil">
  <requires>
    <import addon="xbmc.python" version="2.20.0"/>
  </requires>
    <extension point="kodi.context.item" library="addon.py">		
      <item>
        <label>Find Streams</label>
        <visible>StringCompare(ListItem.dbtype,movie) | StringCompare(ListItem.dbtype,tvshow) | StringCompare(ListItem.dbtype,season) | StringCompare(ListItem.dbtype,episode)</visible>
      </item>
    </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Finds legal streams for movies/shows.</summary>
    <description lang="en">Adds a context menu item for your movies/shows to find legal streams.</description>
    <platform>all</platform>
    <forum>http://forum.kodi.tv/showthread.php?tid=261045</forum>
    <source>https://github.com/Leuthil/FindStreams/</source>
  </extension>
</addon>
